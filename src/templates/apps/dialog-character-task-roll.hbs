<form id="character-task-form" class="sta-form">
  <div class=" dice-pool flexcol">
    <div class="flexrow">
      <label class="label">{{localize "sta.apps.focus"}}</label>
      <input type="checkbox" name="hasFocus" id="hasFocus" {{#if preset.hasFocus}}checked{{/if}}>
    </div>
    <div class="flexrow">
      <label class="label">{{localize "sta.apps.determination"}}</label>
      <input type="checkbox" name="usesDetermination" id="usesDetermination" {{#if (and hasDetermination preset.usesDetermination)}}checked{{/if}} {{#if (not hasDetermination)}}disabled{{/if}}>
    </div>
    <div class="flexrow">
      <label class="label">{{localize "sta.actor.character.attribute.label"}}</label>
      <select name="attribute" id="attributeSelector">
        {{#select preset.scores.[0].key}}
        {{#each attributes as |attribute key|}}
        <option value="{{key}}" data-value="{{this.value}}" data-label="{{this.label}}">{{localize this.label}}</option>
        {{/each}}
        {{/select}}
      </select>
    </div>
    <div class="flexrow">
      <label class="label">{{localize "sta.actor.character.discipline.label"}}</label>
      <select name="discipline" id="disciplineSelector">
        {{#select preset.scores.[1].key}}
        {{#each disciplines as |discripline key|}}
        <option value="{{key}}" data-value="{{this.value}}" data-label="{{this.label}}">{{localize this.label}}</option>
        {{/each}}
        {{/select}}
      </select>
    </div>
    <div class="flexrow">
      <label class="label" style="flex: 80%;">{{localize "sta.apps.complicationrange"}}</label>
      <input style="text-align: center;" class="numeric-entry" type="number" name="complicationRange" value="{{#if preset.complicationRange}}{{preset.complicationRange}}{{else}}1{{/if}}"
        id="complicationRange">
    </div>
    <div class="flexrow">
      <div style="flex: 1;"><label class="label">{{localize "sta.apps.pool"}}</label></div>
      <div style="flex: 1;display: flex;flex-direction: column;">
        <div class="flexrow">
          <span class="label" style="flex: 1; text-align: left;">{{localize "sta.counting.one"}}</span>
          <span style="flex: 1; text-align: center;"></span>
          <span class="label" style="flex: 1; text-align: center;">{{localize "sta.counting.two"}}</span>
          <span style="flex: 1; text-align: center;"></span>
          <span class="label" style="flex: 1; text-align: center;">{{localize "sta.counting.three"}}</span>
          <span style="flex: 1; text-align: center;"></span>
          <span class="label" style="flex: 1; text-align: center;">{{localize "sta.counting.four"}}</span>
          <span style="flex: 1; text-align: center;"></span>
          <span class="label" style="flex: 1; text-align: center;">{{localize "sta.counting.five"}}</span>
        </div>
        <input type="range" name="pool" id="pool" min="1" max="5" value="{{#if preset.pool}}{{preset.pool}}{{else}}2{{/if}}" class="slider">
      </div>
    </div>
  </div>
</form>