<form class="{{cssClass}} flexcol" autocomplete="off">

  <header class="sheet-header flexrow">
    <div class="header-details flexrow">
      <img class="profile" src="{{data.img}}" data-edit="img" title="{{data.name}}" />
      <h1 class="item-name">
        <input name="name" type="text" value="{{data.name}}" placeholder="{{localize 'sta.item.genericitem.name'}}" />
      </h1>
    </div>

    <div class="summary flexrow">
      <div>
        <label class="label">{{localize 'sta.actor.belonging.weapon.range'}}</label>
        <select name="data.range">
          {{#select data.data.range}}
          <option value="{{localize 'sta.actor.belonging.weapon.close'}}">{{localize
            'sta.actor.belonging.weapon.close'}}</option>
          <option value="{{localize 'sta.actor.belonging.weapon.medium'}}">{{localize
            'sta.actor.belonging.weapon.medium'}}</option>
          <option value="{{localize 'sta.actor.belonging.weapon.long'}}">{{localize 'sta.actor.belonging.weapon.long'}}
          </option>
          {{/select}}
        </select>
      </div>
    </div>
  </header>

  </header>

  <nav class="sheet-navigation tabs" data-group="primary">
    <a class="item" data-tab="description">{{localize 'sta.sheet.tab.description'}}</a>
    <a class="item" data-tab="qualities">{{localize 'sta.sheet.tab.qualities'}}</a>
  </nav>

  <section class="sheet-spacer"></section>

  <section class="sheet-body">
    {{> "systems/sta-ng/templates/apps/sheets/parts/tab-description.hbs"}}
    <div class="flexrow tab qualities" data-group="primary" data-tab="qualities">
      <div>
        <input type="number" name="data.damage" value="{{data.data.damage}}" />
        <label class="label">{{localize 'sta.actor.belonging.weapon.damage'}}</label>
      </div>
      <div>
        <input type="number" name="data.qualities.hiddenx" value="{{data.data.qualities.hiddenx}}" />
        <label class="label">{{localize 'sta.actor.belonging.weapon.hiddenx'}}</label>
      </div>
      <div>
        <input type="number" name="data.qualities.piercingx" value="{{data.data.qualities.piercingx}}" />
        <label class="label">{{localize 'sta.actor.belonging.weapon.piercingx'}}</label>
      </div>
      <div>
        <input type="number" name="data.qualities.viciousx" value="{{data.data.qualities.viciousx}}" />
        <label class="label">{{localize 'sta.actor.belonging.weapon.viciousx'}}</label>
      </div>
      <div>
        <input type="number" name="data.qualities.versatilex" value="{{data.data.qualities.versatilex}}" />
        <label class="label">{{localize 'sta.actor.belonging.weapon.versatilex'}}</label>
      </div>
      <div></div>

      <div class="linebreak"></div>

      <div>
        <input type="checkbox" name="data.qualities.area" {{checked data.data.qualities.area}}>
        <label class="label">{{localize 'sta.actor.belonging.weapon.area'}}</label>
      </div>
      <div>
        <input type="checkbox" name="data.qualities.calibration" {{checked data.data.qualities.calibration}}>
        <label class="label">{{localize 'sta.actor.belonging.weapon.calibration'}}</label>
      </div>
      <div>
        <input type="checkbox" name="data.qualities.dampening" {{checked data.data.qualities.dampening}}>
        <label class="label">{{localize 'sta.actor.belonging.weapon.dampening'}}</label>
      </div>
      <div>
        <input type="checkbox" name="data.qualities.devastating" {{checked data.data.qualities.devastating}}>
        <label class="label">{{localize 'sta.actor.belonging.weapon.devastating'}}</label>
      </div>
      <div>
        <input type="checkbox" name="data.qualities.highyield" {{checked data.data.qualities.highyield}}>
        <label class="label">{{localize 'sta.actor.belonging.weapon.highyield'}}</label>
      </div>
      <div>
        <input type="checkbox" name="data.qualities.spread" {{checked data.data.qualities.spread}}>
        <label class="label">{{localize 'sta.actor.belonging.weapon.spread'}}</label>
      </div>
    </div>
  </section>

</form>